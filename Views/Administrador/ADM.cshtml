@model RoletopMvc.ViewModels.DashboardViewModel

<main>
    <div class="ajuste3">

<h2>Pedidos</h2>
    </div>
        <div class="block">
         <div class="quadros1">
            <p>NEGADOS</p>
            <p>@Model.PedidosReprovados</p>

            </div>

            <div class="quadros2">
            <p>APROVADOS</p>
            <P>@Model.PedidosAprovados</P>
            </div>

            <div class="quadros3">
            <p>PENDENTES</p>
            <p>@Model.PedidosPendentes</p>
    </div>
</div>


<div class="dash-adm">
    <table>
        <thead>

            <tr>
                <th rowspan="2">Nome</th>
                <th rowspan="4">Data e Hora</th>
                <th colspan="2">Serviço</th>
                <th rowspan="2">tipo de evento</th>
                <th rowspan="2">Informações</th>
                <th rowspan="2">Pagamento</th>
                <th rowspan="2">Preço Total</th>
                <th colspan="2" rowspan="2">status</th>
            </tr>
                <th><img src="~/img/speaker.png" alt=""></th>
                <th><img src="~/img/spotlight.png" alt=""></th>

            </th>
        </thead>

<tbody>
    @foreach (var pedido in @Model.Pedidos)
    {
        
            <tr>
                <td>@pedido.organizado</td>
                <td>@pedido.DataDoPedido</td>
                <td><img src=@pedido.selecionaIlumina></td>
                <td><img src=@pedido.selecionaSom></td>
                <td>@pedido.TipoEvento</td>
                <td>@pedido.Descricao</td>
                <td>@pedido.Pagamento</td>
                <td>R$ @pedido.PrecoTotal</td>
                <td><a href='@Url.Action("Aprovar", "Agendamento", new {id = @pedido.Id})'><img src="~/img/agora.png" alt=""></a></td>
                <td><a href='@Url.Action("Reprovar", "Agendamento", new {id = @pedido.Id})'><img src="~/img/icons8-x-16.png" alt=""></a></td>
            </tr>
    }
        </tbody>
    </table>
</div>  


<div class="dash-mensagem">
    <h2>mensagens</h2>
    <table>
        <tr>
            <th>nome</th>
            <th>Data e Hora</th>
            <th colspan="2">objetivo</th>
        </tr>
                
        <tr>  
                @foreach (var item in @Model.mensagem)
                {
                    <td>@item.Email</td>
                    <td>@item.Data</td>
                    <td>@item.Objetivo</td>
                    <td><a  data-modal-target="#modal">ler</a></td>

               
                   
            <div class="modal" id="modal">
                    <div class="modal-header">
                        <div class="title">Mensagem do cliente</div>
                        <button data-close-button class="close-button">&times;</button>
                    </div>
                    <div class="modal-body" id="MensagemADM">
                        <form  method="POST" action='@Url.Action("EnviarEmail", "Administrador")'>
                            <input type="email" name="emaildamensagem"  value="@item.Email">
                            <input type="text" maxlength="25" name="recebe" disabled value="@item.Objetivo">
                            <input type="text" name="mensagemDoCliente"id="motivo" disabled @item.MensagemDoCliente>
                            <input type="text" name="tituloDoTexto" placeholder="Titulo do texto">
                            <input type="text" maxlength="1000" name="resposta" placeholder="Escreva a Resposta"id="motivo">
                            <input type="submit">
                            
                        </form>
                    </div>
                </div>
                <div id="overlay"></div>
                }
                
        </tr>
    </table>

</div>

